              "key_code": "rewind"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "touchcursor_extended_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "]",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "fastforward"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "touchcursor_extended_mode",
              "value": 1
            }
          ]
        }
      ]
    },
